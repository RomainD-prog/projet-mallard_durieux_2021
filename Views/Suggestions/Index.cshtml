@model MvcMovie.Models.MovieGenreViewModel
    
@{
    ViewData["Title"] = "Suggestions";
}
<h1>@ViewData["Title"]</h1>

<p>Retrouvez ici les films que vou seriez susceptibles d'aimer.</p>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => Model.Movies[0].Titre)
            </th>
            <th>
                @Html.DisplayNameFor(model => Model.Movies[0].Datedesortie)
            </th>
            <th>
                @Html.DisplayNameFor(model => Model.Movies[0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => Model.Movies[0].Phase)
            </th>
            <th>
                @Html.DisplayNameFor(model => Model.Movies[0].Vu)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Movies) {
    @if (item.Note >= 8 && item.Vu == 0){
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Image)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Datedesortie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Note)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phase)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vu)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> 
            </td>
        </tr>
}}
    </tbody>
</table>
